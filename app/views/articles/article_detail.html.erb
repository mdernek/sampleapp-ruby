<div class="container">
    <div class="row">
        <div class="blog-post">
            <h2 class="blog-post-title"><%= @article.title %></h2>
            <p class="blog-post-meta"><%= @article.created_at.strftime("%A %d, %Y") %></p>
            <p><%= simple_format(@article.text) %></p>
        </div>
    </div>
    <h3>Comments</h3>
<%= render @article.comments %>

<h3>Add a Comment:</h3>
<%= render 'comments/form' %>
</div>

